<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.umanitoba.comp4350androidapp.UserAccountFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail"
        android:id="@+id/user_account_email"
        android:layout_gravity="left|top"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="125dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/user_account_email_edittext"
        android:layout_gravity="right|top"
        android:layout_marginTop="110dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/user_account_password"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/user_account_password_edittext"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/user_account_login_button"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Error"
        android:id="@+id/network_error_text"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="170dp"
        android:textStyle="bold"
        android:textSize="14dp"
        android:visibility="invisible" />
</FrameLayout>

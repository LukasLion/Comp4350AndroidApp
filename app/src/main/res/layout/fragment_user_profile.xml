<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.umanitoba.comp4350androidapp.UserProfile">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_picture"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:minHeight="200dp"
        android:minWidth="130dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kanye"
        android:id="@+id/user_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:minWidth="110dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yeezus"
        android:id="@+id/user_city"
        android:textSize="17dp"
        android:layout_alignTop="@+id/profile_picture"
        android:layout_toEndOf="@+id/user_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cali"
        android:id="@+id/user_region"
        android:textSize="17dp"
        android:layout_below="@+id/user_city"
        android:layout_toEndOf="@+id/user_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Earf"
        android:id="@+id/user_country"
        android:textSize="17dp"
        android:layout_below="@+id/user_region"
        android:layout_toEndOf="@+id/user_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twitter Beggin"
        android:id="@+id/user_degree"
        android:textSize="17dp"
        android:layout_below="@+id/user_country"
        android:layout_alignStart="@+id/user_country" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yo making yeezus 2 get at me with some funds."
        android:id="@+id/user_about"
        android:textSize="17dp"
        android:layout_alignBottom="@+id/profile_picture"
        android:layout_toEndOf="@+id/user_name" />

</RelativeLayout>
